<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".ProfileActivity_Service">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="180dp"
        android:layout_height="203dp"
        android:src="@drawable/background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPANY NAME"
        android:textColor="#ba000d"
        android:textAlignment="center"
        android:textSize="36dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My company doesn't exsist because my company is non-exsistent."
        android:textSize="24dp"
        android:textColor="#bc5206"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My companies services don't exsist as well."
        android:textSize="24dp"
        android:textColor="#bc5206"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textSize="24dp"
        android:textColor="#bc5206"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact no."
        android:textSize="24dp"
        android:textColor="#bc5206"/>
</LinearLayout>

