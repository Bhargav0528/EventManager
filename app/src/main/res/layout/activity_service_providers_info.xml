<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Authentication.ServiceProvidersInfo">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_service"
    tools:context=".Authentication.ServiceProvidersInfo">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/purpledark"
        android:id="@+id/toolbar"
        android:layout_weight="1">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:src="@drawable/profilepic" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPANY NAME"
        android:textColor="#ffffff"
        android:id="@+id/compname"
        android:textAlignment="center"
        android:textSize="36dp"
        />
    <EditText
        android:id="@+id/compdescp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="10"
        android:minLines="2"
        android:text="Company Description"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Address:"
        android:textSize="24dp"
        android:textColor="#ffffff"/>
    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact no."
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#ffffff"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Next" />

</LinearLayout>
</ScrollView>